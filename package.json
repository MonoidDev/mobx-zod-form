{
  "name": "mobx-zod-form",
  "version": "0.0.1",
  "type": "commonjs",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./lib/react": {
      "import": "./lib/react.mjs",
      "require": "./lib/react.js",
      "default": "./lib/react.js"
    }
  },
  "files": [
    "src/",
    "lib/"
  ],
  "author": "Chenyu Wang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hanayashiki/mobx-zod-form"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prepare": "husky install; pnpm build",
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts src/react.ts --external react --format esm,cjs --splitting -d lib/ && tsc -p tsconfig.build.json",
    "lint": "tsc && eslint ./src --ext .ts,.tsx",
    "test": "vitest run"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "mobx": "^6.8.0",
    "prettier": "^2.7.1",
    "tsup": "^6.2.3",
    "tsx": "^3.9.0",
    "typescript": "^4.8.3",
    "vitest": "^0.22.1",
    "zod": "^3.21.2",
    "@types/react": "^18.0.28"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "mobx": "^6.8.0",
    "zod": "^3.21.2",
    "react": "^18.2.0"
  }
}
